{
  "name": "claude-usage-monitor",
  "displayName": "Claude Usage Monitor",
  "description": "Monitor your Claude.ai usage directly in VS Code",
  "version": "1.1.0",
  "publisher": "Gronsten",
  "author": {
    "name": "Mark Campbell",
    "url": "https://github.com/Gronsten"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gronsten/claude-usage-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/Gronsten/claude-usage-monitor/issues"
  },
  "homepage": "https://github.com/Gronsten/claude-usage-monitor#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-usage.fetchNow",
        "title": "Fetch Claude Usage Now",
        "category": "Claude"
      },
      {
        "command": "claude-usage.openSettings",
        "title": "Open Claude Settings Page",
        "category": "Claude"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-usage",
          "title": "Claude Usage",
          "icon": "$(pulse)"
        }
      ]
    },
    "views": {
      "claude-usage": [
        {
          "id": "claude-usage-view",
          "name": "Session Usage"
        }
      ]
    },
    "configuration": {
      "title": "Claude Usage Monitor",
      "properties": {
        "claudeUsage.fetchOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fetch usage data when VS Code starts"
        },
        "claudeUsage.headless": {
          "type": "boolean",
          "default": true,
          "description": "Run browser in headless (hidden) mode. Browser will show automatically if login is needed."
        },
        "claudeUsage.activityBasedRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically adjust refresh rate based on coding activity (5-60 minutes). Disable to use fixed interval."
        },
        "claudeUsage.autoRefreshMinutes": {
          "type": "number",
          "default": 15,
          "description": "Fixed auto-refresh interval in minutes (only used when Activity-Based Refresh is disabled)"
        }
      }
    }
  },
  "dependencies": {
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0"
  }
}
