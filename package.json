{
  "name": "claude-session-usage",
  "displayName": "Claude Session Usage",
  "description": "Monitor Claude.ai web usage and Claude Code token consumption directly in VS Code with real-time tracking",
  "version": "2.6.5",
  "publisher": "Gronsten",
  "author": {
    "name": "Mark Campbell",
    "url": "https://github.com/Gronsten"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gronsten/claude-usage-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/Gronsten/claude-usage-monitor/issues"
  },
  "homepage": "https://github.com/Gronsten/claude-usage-monitor#readme",
  "license": "MIT",
  "icon": "icons/claude-usage-icon.png",
  "sponsor": {
    "url": "https://github.com/sponsors/Gronsten"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "build": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production && vsce package",
    "publish": "node esbuild.js --production && vsce publish"
  },
  "contributes": {
    "commands": [
      {
        "command": "claude-usage.fetchNow",
        "title": "Fetch Claude Usage Now",
        "category": "Claude"
      },
      {
        "command": "claude-usage.openSettings",
        "title": "Open Claude Settings Page",
        "category": "Claude"
      },
      {
        "command": "claude-usage.startNewSession",
        "title": "Start New Claude Code Session",
        "category": "Claude"
      },
      {
        "command": "claude-usage.updateTokens",
        "title": "Update Token Usage (Manual Test)",
        "category": "Claude"
      },
      {
        "command": "claude-usage.showDebug",
        "title": "Show Debug Output",
        "category": "Claude"
      },
      {
        "command": "claude-usage.resetConnection",
        "title": "Reset Browser Connection",
        "category": "Claude"
      },
      {
        "command": "claude-usage.clearSession",
        "title": "Clear Browser Session (Re-login)",
        "category": "Claude"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-usage",
          "title": "Claude Usage",
          "icon": "icons/claude-usage-tree-icon.svg"
        }
      ]
    },
    "views": {
      "claude-usage": [
        {
          "id": "claude-usage-view",
          "name": "Session Usage"
        }
      ]
    },
    "configuration": {
      "title": "Claude Usage Monitor",
      "properties": {
        "claudeUsage.fetchOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fetch usage data when VS Code starts"
        },
        "claudeUsage.headless": {
          "type": "boolean",
          "default": true,
          "description": "Run browser in headless (hidden) mode. Browser will show automatically if login is needed."
        },
        "claudeUsage.autoRefreshMinutes": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "Auto-refresh interval in minutes for checking Claude.ai usage and session token data (1-60 minutes)"
        },
        "claudeUsage.statusBar.showSession": {
          "type": "boolean",
          "default": true,
          "description": "Show 5-hour session usage in status bar"
        },
        "claudeUsage.statusBar.showWeekly": {
          "type": "boolean",
          "default": true,
          "description": "Show 7-day weekly usage in status bar"
        },
        "claudeUsage.statusBar.showSonnet": {
          "type": "boolean",
          "default": false,
          "description": "Show Sonnet weekly usage in status bar"
        },
        "claudeUsage.statusBar.showOpus": {
          "type": "boolean",
          "default": false,
          "description": "Show Opus weekly usage in status bar (Max plans only)"
        },
        "claudeUsage.statusBar.showTokens": {
          "type": "boolean",
          "default": true,
          "description": "Show token usage in status bar"
        },
        "claudeUsage.statusBar.showCredits": {
          "type": "boolean",
          "default": false,
          "description": "Show extra usage (spending cap) in status bar"
        },
        "claudeUsage.thresholds.warning": {
          "type": "number",
          "default": 75,
          "minimum": 1,
          "maximum": 100,
          "description": "Usage percentage to show warning (yellow) indicator"
        },
        "claudeUsage.thresholds.error": {
          "type": "number",
          "default": 90,
          "minimum": 1,
          "maximum": 100,
          "description": "Usage percentage to show error (red) indicator"
        },
        "claudeUsage.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging to output channel (for troubleshooting)"
        }
      }
    }
  },
  "dependencies": {
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.27.0"
  }
}
